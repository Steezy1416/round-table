<nav class="navbar">
    <button class="new-chat"><i class="fa-thin fa-plus"></i></button>
    <ul class="navbar-nav">
        {{#each globalUserData.chats}}
        <li class="nav-item" id-chat_num="{{id}}">{{chat_name}}</li>
        {{/each}}
    </ul>
</nav>

<section class="chat-info">
    <div>
        <p class="info-title container">{{data.chat_name}}</p>
    </div>

    <p class="container users-title">Users</p>

    <div class="user-container container">
        <ul class="user-list">
            {{#each data.users}}
            <li class="user">{{username}}</li>
            {{/each}}
        </ul>
    </div>

    <div>
        <button class="container leave-btn">Leave Chat</button>
    </div>
</section>

<main>
    <ul class="message-container">
        {{#each data.messages}}
        <li class="text_message">
            <p class="message-user">{{#with user}}{{username}}{{/with}} <span class="date">90/40/11</span></p>
            <p class="message">{{text_message}}</p>
        </li>
        {{/each}}
    </ul>

    <form class="message-input-form">
        <input type="text" class="message-input" placeholder="Enter Message">
        <button type="submit" class="send-btn"><i class="fa-solid fa-paper-plane"></i></button>
    </form>
</main>